<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:local="clr-namespace:Core;assembly=Core" x:Class="Core.DirectoryPage" Title="Directory">
	
<StackLayout>
	 <ListView ItemsSource="{Binding People}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.View>
              <StackLayout Padding="5, 0, 0, 0"
                           Orientation="Horizontal"
                           Spacing="15">
                <Image Source="{Binding ProfileImage}"></Image>
                           
                <Label Text="{Binding FirstName}"
                       Font="Medium" VerticalOptions="Center"/>
                
                <Label Text="{Binding LastName}" VerticalOptions="Center"
                                        Font="Medium" />

                <Button HorizontalOptions="EndAndExpand" WidthRequest="100" Clicked="OnButtonClicked" CommandParameter="{Binding Id}" Text="Chat"></Button>

              </StackLayout>
            </ViewCell.View>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>

    </ListView>
	</StackLayout>
</ContentPage>	